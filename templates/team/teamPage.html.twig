{% extends "base.html.twig" %}
{% block title %} {{ team.name }} {% endblock title %}
{% block stylesheets %}
{% endblock %}


{% block h1 %} Welcome to {{ team.name }} {% endblock h1 %}

{% block body %}

<div class="container">
    <div class="myTasks">
        {% if team.tasks %}
            {% for task in team.tasks %}
                <button class="myTasks-button"> {{ task.title }} | {{ task.status.value }} </button>
            {% endfor %}
        {% endif %}
    </div>


    <div class="users">
        <h2> All Users </h2>
        {% if team.users %}
            {% for user in team.users %}
                <div>{{ user.email }}</div>
            {% endfor %}
        {% endif %}
    </div>
</div>

{% endblock %}